{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types/generated",
    "emitDeclarationOnly": true,
    "tsBuildInfoFile": "./types/generated/tsconfig.tsbuildinfo",
    "rootDir": "./src",
    "jsx": "react-jsx",

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "erasableSyntaxOnly": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.stories.tsx", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "references": [
    { "path": "../admin-x-design-system/tsconfig.json" },
    { "path": "../admin-x-framework/tsconfig.json" },
    { "path": "../shade/tsconfig.json" }
  ]
}
